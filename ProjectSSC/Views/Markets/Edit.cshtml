@model  ProjectSSC.Models.MarketModel
@{
    ViewBag.Title = "Magazine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
@Scripts.Render("~/bundles/Logged")

@using (Html.BeginForm("Edit", "Markets", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()

    <div class="container pagination-centered">
        <div class="containerWrapper col-md-8 col-md-offset-2">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Market.ID)
                <br />
                <div class="form-group">
                    <div class="form-group">
                        <strong class="control-label col-md-3 ">Adresa:</strong>
                        <div class="col-md-8">
                            @Html.EditorFor(model => Model.Market.Adresa, new { htmlAttributes = new { @class = "form-control", @rows = 8 } })
                            @Html.ValidationMessageFor(model => Model.Market.Adresa, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <strong class="control-label col-md-3 ">Denumire:</strong>
                        <div class="col-md-8">
                            @Html.EditorFor(model => Model.Market.Denumire, new { htmlAttributes = new { @class = "form-control", @rows = 8 } })
                            @Html.ValidationMessageFor(model => Model.Market.Denumire, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <strong class="control-label col-md-3 ">Oras:</strong>
                        <div class="col-md-8">
                            @Html.EditorFor(model => Model.Market.Oras, new { htmlAttributes = new { @class = "form-control", @rows = 8 } })
                            @Html.ValidationMessageFor(model => Model.Market.Oras, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <strong class="control-label col-md-3 ">Imagine:</strong>
                        <div class="col-md-8">
                            <input type="file" name="postedFile" />
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 ">
                        <input type="submit" value="Modifica" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

