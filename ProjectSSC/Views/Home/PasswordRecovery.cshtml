@model ProjectSSC.Models.LoginModel
@{
    ViewBag.Title = "Recuperare parola";
}
<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/3rdParty/bootstrap.min.css" rel="stylesheet" type="text/css">
    @Styles.Render("~/Content/Login")
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel-login">
                    <div id="LoginBox" class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                    @using (Html.BeginForm("PasswordRecovery", "Home", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true)
                                        <div class="form-group">
                                            <input type="text" name="email" id="email" tabindex="1" class="form-control" placeholder="Email" value="">
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-sm-6 col-sm-offset-3">
                                                    <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Recuperare parola">
                                                </div>
                                            </div>
                                        </div>
                                    }
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
</body>
</html>

<script>
    $(document).ready(function () {
        if ("@Model.Message") {
            $("#deleteMesage").text("@Model.Message");
            $("#deleteDialogFalse").html("Ok");
            $("#deleteDialogTrue").hide();
            $("#deleteDialog").show();
        }
    });
</script>
