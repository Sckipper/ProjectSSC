
@{
    ViewBag.Title = "Produse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.13/js/dataTables.bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.1.1/js/dataTables.responsive.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.1.1/js/responsive.bootstrap.min.js"></script>
<script>
    $(document).ready(function (){
        $('#datatable').dataTable( {
            "columnDefs": [ {
                "targets": 'no-sort',
                "orderable": false,
            } ]
        } );
    });
</script>
<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.13/css/dataTables.bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css">
@Scripts.Render("~/bundles/Logged")

<div class="container pagination-centered">
    <div class="col-md-12">
        <div class="dataTables_wrapper form-inline dt-bootstrap containerWrapper">
            <div class="table-responsive">
                <table id="datatable" class="table dataTable">
                    <thead>
                        <tr>
                            <th id="id"></th>
                            <th>Categorie</th>
                            <th>Magazin</th>
                            <th>Produs</th>
                            <th>Greutate</th>
                            <th>Pret</th>
                            <th>Cantitate</th>
                            <th>Data Expirare</th>
                            <th>Descriere</th>
                            <th>Imagine</th>
                            <th class="endButtons no-sort">
                                <button id="add" onclick="location.href='@Url.Action("Create", "Products")'" />
                            </th>
                        </tr>
                    </thead>
                    <tbody id="table">
                        @foreach (var item in Model)
                        {
                            <tr class="addedrow">
                                <td id="id">@item.ID</td>
                                <td>@item.CategoryName</td>
                                <td>@item.MarketName</td>
                                <td id="nume">@item.Denumire</td>
                                <td>@item.Greutate</td>
                                <td>@item.Pret</td>
                                <td>@item.Cantitate</td>
                                <td>@(item.DataExpirate != null ? item.DataExpirate.ToShortDateString() : "")</td>
                                <td>@item.Descriere</td>
                                <td class="image">@if (item.Imagine != null)
                                {
                                    <img class="img" src="~/Content/ProductsImages/@(item.Imagine).png" /> 
                                }</td>
                                <td>
                                    <button class="edit" onclick="location.href='@Url.Action("Edit", "Products", new { id = item.ID})'"></button>
                                    <button class="delete"></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

